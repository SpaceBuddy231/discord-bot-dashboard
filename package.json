{
  "name": "discord-bot-dashboard",
  "version": "1.0.0",
  "description": "Advanced Discord Bot Management Dashboard with Analytics",
  "private": true,
  "workspaces": [
    "bot",
    "api",
    "frontend"
  ],
  "scripts": {
    "dev:bot": "npm run dev --workspace=bot",
    "dev:api": "npm run dev --workspace=api",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:api\" \"npm run dev:frontend\"",
    "build:bot": "npm run build --workspace=bot",
    "build:api": "npm run build --workspace=api",
    "build:frontend": "npm run build --workspace=frontend",
    "build": "npm run build:bot && npm run build:api && npm run build:frontend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
